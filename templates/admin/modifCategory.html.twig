{% extends 'base.html.twig' %}

{% block main %}

    {{ form_start(form) }}

    <div class="input-group mb-3">
        {{ form_label(form.name, 'Nom:', {'label_attr': {'class': 'input-group-text'}})}}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="input-group mb-3">
        {{ form_label(form.description, 'Description:', {'label_attr': {'class': 'input-group-text'}})}}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <br><br>
    <button type="submit" class="btn btn-warning" style="margin-left:45%">Modifier</button>
    {{ form_end(form) }}
{% endblock %}